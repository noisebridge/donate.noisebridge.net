<div class="row">
  <div class="col-md-8 col-md-offset-2 donation-header">
    <a href="http://noisebridge.net">
      <%= image_tag('noisebridge_logo.jpg', class: 'center noisebridge_logo') %>
    </a>
    <h3>Noisebridge: a hacker spaceship needs your help!</h3>
  </div>

  <div class="col-md-6 col-md-offset-3 donation-progress">
    <%= render partial: "progress_bar", locals: { amount: total_raised, total: fundraising_goal } %>
  </div>

  <div class="col-md-10 col-md-offset-1">
    <div class="col-md-4 col-md-offset-2 donation-form">
      <%= render "donation_form" %>
    </div>

    <div class="col-md-4 clo-md-offset-2 summary">
      <div class="table-container">
        <h3><a href="/projects">Projects</a></h3>
      </div>
      
      <div class="table-container">
        <%= render "recent_donations" %>
      </div>

      <div class="table-container">
        <%= render "current_projects" %>
      </div>
    </div>
  </div>
</div>
